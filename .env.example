# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-app-url.vercel.app

# Cron Jobs
CRON_SECRET=your-cron-secret-here

# Email (Optional)
EMAIL_FROM=noreply@wglifeos.com

# WebAuthn (Biometric Authentication)
# Note: RP_ID and ORIGIN are auto-detected from VERCEL_URL in production
# Only set these if you need to override the automatic detection
WEBAUTHN_RP_NAME=WG Life OS
# WEBAUTHN_RP_ID=wg-growth-app.vercel.app
# WEBAUTHN_ORIGIN=https://wg-growth-app.vercel.app

# Push Notifications (Optional)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# Public App URL
NEXT_PUBLIC_APP_URL=https://your-app-url.vercel.app
